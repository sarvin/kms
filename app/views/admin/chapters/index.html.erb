<div class="page-header">
  <h1>Chapters</h1>
</div>
<div class="panel panel-default">
  <table class="table">
		<caption>Chapters assigned to a State</caption>
		<thead>
			<tr>
				<th>Name</th>
				<th>State</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
    <% sort_chapters_by_state(@adopted_chapters).each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td>
        <%- if chapter.state %>
          <%= chapter.state.titleize_name %>
        <%- else %>
          N/A
        <%- end %>
        </td>
        <td><%= link_to admin_chapter_path(chapter) do%>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %></td>
        <td><%= link_to edit_admin_chapter_path(chapter) do%>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %></td>
        <td><%= link_to admin_chapter_path(chapter), method: :delete, data: { confirm: 'Are you sure?' } do%>
          <span class="glyphicon glyphicon-remove" style="color:red" aria-hidden="true"></span>
        <% end %></td>
        <td>
          
        </td>
      </tr>
    <%- end %>
		</tbody>
	</table><br />
</div>

<div class="panel panel-default">
  <table class="table">
		<caption>Chapters not assigned to a State</caption>
		<thead>
			<tr>
				<th>Name</th>
				<th>State</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
    <% sort_chapters_by_state(@orphaned_chapters).each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td>
        <%- if chapter.state %>
          <%= chapter.state.titleize_name %>
        <%- else %>
          N/A
        <%- end %>
        </td>
        <td><%= link_to admin_chapter_path(chapter) do%>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %></td>
        <td><%= link_to edit_admin_chapter_path(chapter) do%>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %></td>
        <td><%= link_to admin_chapter_path(chapter), method: :delete, data: { confirm: 'Are you sure?' } do%>
          <span class="glyphicon glyphicon-remove" style="color:red" aria-hidden="true"></span>
        <% end %></td>
        <td>
          
        </td>
      </tr>
    <%- end %>
		</tbody>
  </table>
</div>
