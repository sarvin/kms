<%- if chapters.any? %>
<div class="panel panel-default">
  <table class="table">
    <caption><%= description %></caption>
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Show on website</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% sort_chapters_by_state(chapters).each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td>
        <%- if chapter.state %>
          <%= chapter.state.titleize_name %>
        <%- else %>
          N/A
        <%- end %>
        </td>
        <td>
          <%- if chapter.public_navigation.active %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <%- end %>
        </td>
        <td><%= link_to admin_chapter_path(chapter) do%>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <%- end %>
        </td>
        <td><%= link_to edit_admin_chapter_path(chapter) do%>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%- end %>
        </td>
        <td><%= link_to admin_chapter_path(chapter), method: :delete, data: { confirm: 'Are you sure?' } do%>
          <span class="glyphicon glyphicon-remove" style="color:red" aria-hidden="true"></span>
        <%- end %>
        </td>
      </tr>
    <%- end %>
    </tbody>
  </table><br />
</div>
<%- end %>
