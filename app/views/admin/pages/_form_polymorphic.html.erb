<%- unless @page %>
	<%- @page = pageable.build_page %>
<%- end %>
<%= form_for([:admin, pageable, @page]) do |f| %>
	<% if @page.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@page.errors.count, "error") %> prohibited
				this chapter from being saved:
			</h2>
			<ul>
				<% @page.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :sub_title %><br>
		<%= f.text_field :sub_title %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body, :cols => 80, :rows => 20 %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
<%= link_to 'Back', polymorphic_path(pageable) %>
