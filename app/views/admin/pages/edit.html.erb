<%- if @pageable.present? %>
	<div class="page-header">
		<h1>Edit <%= @pageable.name %> <%= @page.pageable_type %> Page</h1>
	</div>
	<%= render 'form_polymorphic', :pageable => @pageable %>
<%- else %>
	<div class="page-header">
		<h1>Edit <%= @page.title %> Page</h1>
	</div>
	<%= render 'form' %>
<%- end %>
