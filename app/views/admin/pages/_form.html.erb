<%= form_for([:admin, @page]) do |f| %>
	<%- if @page.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@page.errors.count, "error") %> prohibited
				this page from being saved:
			</h2>
			<ul>
				<%- @page.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<%- end %>
			</ul>
		</div>
	<%- end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :sub_title %><br>
		<%= f.text_field :sub_title %>
	</p>
	<div>
		<%= f.label :body %><br>
		<%#= f.text_area :body, :cols => 80, :rows => 20 %>
		<%= f.bootsy_area :body, :cols => 110, :rows => 20 %>
	</div>
	<p>
		<%= f.submit %>
	</p>
<%- end %>
<%= link_to 'Back', admin_pages_path(@page) %>
