<div class="panel panel-default">
  <table class="table">
    <caption>
      <%- if !chapter.nil? %>
        <%= chapter.name %>
      <% else %>
        Members who haven't been assigned to a chapter
      <% end %>
    </caption>
    <thead>
      <tr>
        <th>Position</th>
        <th>Name</th>
        <th>Email</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.role_list.map{|role_name| role_name.titleize}.join(', ') %></td>
        <td><%= user.name_first %> <%= user.name_last %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to admin_user_path(user) do%>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          <%- end %>
        </td>
        <td>
          <%= link_to edit_admin_user_path(user) do%>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <%- end %>
        </td>
      </tr>
    <%- end %>
    </tbody>
  </table><br />
</div>
