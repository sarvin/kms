<div class="panel panel-default">
  <table class="table">
		<caption>
			<%- if !chapter.nil? %>
				<%= chapter.name %>
			<% else %>
				Members who haven't been assigned to a chapter
			<% end %>
		</caption>
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.name_first %> <%= user.name_last %></td>
        <td><%= user.email %></td>
      </tr>
    <%- end %>
		</tbody>
	</table><br />
</div>
