<div class="panel panel-default">
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dd><%= @user.role_list.map{|role_name| role_name.titleize}.join(', ') %></dd>
      <dt>Name</dt>
      <dd><%= @user.name %></dd>
      <dt>Email</dt>
      <dd><%= @user.email %></dd>
      <dt>Chapter</dt>
      <dd><% if @user.chapter %><%= @user.chapter.name %><% end %></dd>
    </dl>
    <%- if !@user.address.nil? %>
    <dl class="dl-horizontal">
      <dt>Address</dt>
      <dd><%= @user.address.line_1 %></dd>
      <dd><%= @user.address.line_2 %></dd>
      <dd><%= @user.address.city %>, <% if !@user.address.state.nil? %><%= @user.address.state.name.titleize %><% end %> <%= @user.address.postal_code %></dd>
    </dl>
    <%- end %>
    <%= link_to edit_admin_user_path(@user) do%>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%- end %>
  </div>
</div>
