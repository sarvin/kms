<div class="panel panel-default">
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @user.name %></dd>
      <dt>Email</dt>
      <dd><%= @user.email %></dd>
      <dt>Chapter</dt>
      <dd><% if @user.chapter %><%= @user.chapter.name %><% end %></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt>Address</dt>
      <dd><%= @user.address.line_1 %></dd>
      <dd><%= @user.address.line_2 %></dd>
      <dd><%= @user.address.city %>, <% if !@user.address.state.nil? %><%= @user.address.state.name.titleize %><% end %> <%= @user.address.postal_code %></dd>
    </dl>
  </div>
  </div>
</div>
