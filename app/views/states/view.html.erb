<%= render 'home/banner' %>

<br><br>

<content>
	<div class="row">
		<div class="large-12 columns">
			<div class="row">
				<%= render 'home/main_navigation' %>
				<div class="large-9 medium-9 columns">

					<hr class="top-hr" />
						<h3><%= @state.name.upcase %></h3>
					<hr />

					<p>
					<% @state.chapters.each do |chapter|%>
						<% page = chapter.page %>
						<% if page %>
							<%= page.body.html_safe %>
						<% end %>

					<% end %>
					<hr />

				</div>
			</div>
		</div>
	</div>
</content>

<%= render 'home/footer' %>

<script>
	$(document).foundation();
</script>
