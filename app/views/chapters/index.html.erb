<h1>Chapters</h1>

<table>
	<tr>
		<th>Name</th>
		<th>State</th>
		<th colspan="3"></th>
	</tr>

	<% sort_chapters_by_state(@chapters).each do |chapter| %>
		<tr>
			<td><%= chapter.name %></td>
			<td>
			<%- if chapter.state %>
			<%= chapter.state.titleize_name %>
			<%- else %>
				N/A
			<%- end %>
			</td>
			<td><%= link_to 'Show', chapter_path(chapter) %></td>
			<td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
			<td><%= link_to 'Delete', chapter_path(chapter),
				method: :delete,
				data: { confirm: 'Are you sure?' } %>
			</td>
		</tr>
	<%- end %>
</table>
