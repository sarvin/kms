<h1>Pages</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Sub-Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>

	<% @pages.each do |page| %>
		<tr>
			<td><%= page.title %></td>
			<td><%= page.sub_title %></td>
			<td><%= page.body.html_safe %></td>
			<td><%= link_to 'Show', page_path(page) %></td>
			<% if page.pageable %>
				<td><%= link_to 'Edit', edit_chapter_page_path(page.pageable, page) %></td>
			<% else %>
				<td><%= link_to 'Edit', edit_page_path(page) %></td>
			<% end %>
			<td><%= link_to 'Delete', page_path(page),
				method: :delete,
				data: { confirm: 'Are you sure?' } %>
			</td>
		</tr>
	<% end %>
</table>
